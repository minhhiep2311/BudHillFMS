@model BudHillFMS.Models.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div>
            <h4 class="card-title">Thông tin nhân viên</h4>
            <div class="text-right"><a class="btn btn-tone btn-primary m-r-5" data-toggle="modal" data-target="#HistoryModal">Lịch sử công tác</a></div>
        </div>
       
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.EmployeeId</td>
                    </tr>
                    <tr>
                        <td>Họ và tên:</td>
                        <td>@Model.EmployeeName</td>
                    </tr>
                    <tr>
                        <td>Địa chỉ:</td>
                        <td>@Model.EmployeeAddress</td>
                    </tr>
                    <tr>
                        <td>Số điện thoại:</td>
                        <td>@Model.EmployeePhone</td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td>@Model.EmployeeEmail</td>
                    </tr>
                    <tr>
                        <td>Vị trí</td>
                        <td>@Model.Position</td>
                    </tr>
                    <tr>
                        <td>Trang trại:</td>
                        <td>@Model.Farm?.FarmName</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-tone btn-primary m-r-5">Sửa</a>|
    <a class="btn btn-tone btn-danger m-r-5" data-toggle="modal" data-target="#DeleteModal">Xóa</a> |
    <a asp-action="Index" class="btn btn-tone btn-primary m-r-5">Trở về</a>
</div>



<!--History Modal -->
<div class="modal fade" id="HistoryModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Lịch sử công tác</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <i class="anticon anticon-close"></i>
                </button>
            </div>
            <div class="modal-body">
                Lịch sử công tác của @Model.EmployeeName
            </div>
            <div class="modal-body">
                    <table class="product-info-table ">
                        <tbody>
                            <tr>
                                <td>Trang trại từng làm:</td>
                                <td>@Model.FarmWorked</td>
                            </tr>
                            <tr>
                                <td>Vị trí từng làm:</td>
                                <td>@Model.PositionWorked</td>
                            </tr>
                        </tbody>
                    </table>

                <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    </div>
            </div>
        </div>
    </div>
</div>

<!--Delete Modal -->
<div class="modal fade" id="DeleteModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Xác nhận xóa</h5>
                <button type="button" class="close" data-dismiss="modal">
                    <i class="anticon anticon-close"></i>
                </button>
            </div>
            <div class="modal-body">
                Xác nhận xóa thông tin này!
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-route-id="@Model.EmployeeId">
                    <input type="hidden" asp-for="EmployeeId" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    <input type="submit" value="Xác nhận xóa" class="btn btn-tone btn-danger" />
                </form>

            </div>
        </div>
    </div>
</div>


