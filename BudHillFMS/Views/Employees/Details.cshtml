@model BudHillFMS.Models.Employee

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin nhân viên</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td class="text-dark font-weight-semibold">@Model.EmployeeId</td>
                    </tr>
                    <tr>
                        <td>Họ và tên:</td>
                        <td>@Model.EmployeeName</td>
                    </tr>
                    <tr>
                        <td>Địa chỉ:</td>
                        <td>@Model.EmployeeAddress</td>
                    </tr>
                    <tr>
                        <td>Số điện thoại:</td>
                        <td>@Model.EmployeePhone</td>
                    </tr>
                    <tr>
                        <td>Email:</td>
                        <td>@Model.EmployeeEmail</td>
                    </tr>
                    <tr>
                        <td>Vị trí</td>
                        <td>@Model.Position</td>
                    </tr>
                    <tr>
                        <td>Trang trại:</td>
                        <td>@Model.Farm.FarmName</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.EmployeeId" class="btn btn-primary m-r-5">Sửa</a>|
    <a class="btn btn-danger m-r-5" asp-controller="Employees" asp-action="Delete" asp-route-id="@Model.EmployeeId">Xóa</a> |
    <a asp-action="Index" class="btn btn-primary m-r-5">Trở về</a>
</div>
