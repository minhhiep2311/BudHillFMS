@model IEnumerable<BudHillFMS.Models.WarehouseProduct>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Quản lý kho hàng</h1>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">

                    <div class="m-b-10">
                        <!--
                        <select class="custom-select" id="idwarehouse" name="idwarehouse" style="min-width: 220px;" asp-items="ViewBag.DanhSachKho">
                            <option disabled selected>Nhà kho</option>

                        </select>
                        -->
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <button class="btn btn-tone btn-primary" onclick="location.href='@Url.Action("Create", "WarehouseProducts")'">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Kho hàng mới</span>
                </button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>

                        <th>Tên nhà kho</th>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Đơn vị</th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr onclick="location.href='@Url.Action("Details", "WarehouseProducts", new { id = item.WarehouseId })'">


                                <td>
                                    <h6 class="m-b-0 m-l-10">@item.Warehouse.WarehouseName</h6>
                                </td>
                                <td>
                                    @item.Product.ProductName
                                </td>
                                <td>
                                    @item.Quantity
                                </td>
                                <td>
                                    @item.Unit
                                </td>
                            </tr>

                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
