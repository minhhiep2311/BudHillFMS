@model BudHillFMS.Models.Timekeeping

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chỉnh sửa chấm công</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TimekeepingId" />
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Nhân viên</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckIn" class="control-label"></label>
                <input asp-for="CheckIn" class="form-control" />
                <span asp-validation-for="CheckIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckOut" class="control-label"></label>
                <input asp-for="CheckOut" class="form-control" />
                <span asp-validation-for="CheckOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimekeepingDate" class="control-label">Ngày</label>
                <input asp-for="TimekeepingDate" class="form-control" />
                <span asp-validation-for="TimekeepingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-tone btn-primary" /> |
                <a asp-action="Index" class="btn btn-tone btn-primary m-r-5">Trở về</a>
            </div>
        </form>
    </div>
</div>



