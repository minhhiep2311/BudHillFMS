@model IEnumerable<BudHillFMS.Models.Warehouse>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Quản lý nhà kho</h4>
<div class="card">
    <div class="card-body">
        <div class="row m-b-30">
            <div class="col-lg-8">
                <div class="d-md-flex">

                    <div class="m-b-10">
                        @using (Html.BeginForm("Index", "Warehouses", FormMethod.Get))
                        {
                           @Html.DropDownList("farmId", ViewData["DanhSachFarm"] as SelectList, "Tất cả trang trại", new { @class = "form-control", onchange = "this.form.submit();" })       
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4 text-right">
                <button class="btn btn-tone btn-primary" onclick="location.href='@Url.Action("Create", "Warehouses")'">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Nhà kho mới</span>
                </button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>

                        <th>Tên nhà kho</th>
                        <th>Địa chỉ</th>
                        <th>Trang trại</th>

                     
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr onclick="location.href='@Url.Action("Details", "Warehouses", new { id = item.WarehouseId })'">


                                <td>
                                    <h6 class="m-b-0 m-l-10">@item.WarehouseName</h6>
                                </td>
                                <td>
                                    @item.WarehouseLocation
                                </td>

                                <td>
                                    @item.Farm.FarmName
                                </td>
                            </tr>

                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
