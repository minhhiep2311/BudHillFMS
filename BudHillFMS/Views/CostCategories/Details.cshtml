@model BudHillFMS.Models.CostCategory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
    <div class="card-body">
        <h4 class="card-title">Loại chi phí</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>

                    <tr>
                        <td>ID:</td>
                        <td>	@Model.CategoryId</td>
                    </tr>

                    <tr>
                        <td>Loại chi phí:</td>
                        <td>	@Model.CategoryName</td>
                    </tr>
                    <tr>
                        <td>Mô tả:</td>
                        <td>@Model.CategoryDescription</td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
   
    <a asp-action="Index" class="btn btn-tone btn-primary m-r-5">Trở về</a>
</div>
